<script>
    // Sound effects (Simulated using functional triggers)
    const popSound = new Audio('https://www.soundjay.com/buttons/sounds/button-20.mp3');

    let currentUser = "Guest";

    function toggleModal(id) {
        popSound.play();
        const modal = document.getElementById(id);
        modal.style.display = modal.style.display === 'block' ? 'none' : 'block';
    }

    function login() {
        const val = document.getElementById('user-input').value;
        if (val) {
            currentUser = val;
            document.getElementById('username-display').innerText = currentUser;
            toggleModal('login-modal');
            addChatMessage("System", `Welcome, ${currentUser}! You are now logged in.`);
        }
    }

    function sendChat() {
        const input = document.getElementById('chat-input');
        if (input.value.trim() !== "") {
            addChatMessage(currentUser, input.value);
            input.value = "";
            popSound.play();
        }
    }

    function addChatMessage(user, msg) {
        const area = document.getElementById('chat-area');
        const div = document.createElement('div');
        div.className = 'chat-msg';
        div.innerHTML = `<strong>${user}:</strong> ${msg}`;
        area.appendChild(div);
        area.scrollTop = area.scrollHeight;
    }

    // Simulate "Live" activity like Fishtank
    setInterval(() => {
        const bots = ["AquaLover", "VistaFan", "FrutigerGuy", "ShinyButton"];
        const msgs = ["Look at that reflection!", "So smooth...", "Is this 720p?", "ðŸ«§ðŸ«§ðŸ«§", "Aero is peak design."];
        if (Math.random() > 0.7) {
            addChatMessage(bots[Math.floor(Math.random()*bots.length)], msgs[Math.floor(Math.random()*msgs.length)]);
        }
    }, 4000);

    // Enter key support for chat
    document.getElementById('chat-input').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') sendChat();
    });
</script>

