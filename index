    <input type="text" id="user-input" class="aero-input" style="width: 90%; margin-bottom: 10px;" placeholder="Username"><br>
    <button class="aero-btn" onclick="login()">Enter the Bubble</button>
    <button class="aero-btn" style="background: #999;" onclick="toggleModal('login-modal')">Cancel</button>
